package pt.ipl.estg.dei.miecm.rc;

import java.io.FileNotFoundException;
import java.io.FileReader;
import java.util.ArrayList;
import java.util.Scanner;

public class Main {
	public static final String FILE_A = "/resources/BD-A_source.txt";
	public static final String FILE_B = "BD-B_source.txt";
	public static final String FILE_A_CLEAN = "BD-A_clean.txt";
	public static final String FILE_B_CLEAN = "BD-B_clean.txt";

	private ArrayList<String> content;

	/**
	 * @param args
	 */
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		readFile(FILE_A);

	}

	private static ArrayList<String> readFile(String fileName) {
		String line = "";
		Scanner scanner = null;
		ArrayList<String> content = new ArrayList<String>();

		try {
			String x = Main.class.getResource("/resource/" + fileName).getPath();
			scanner = new Scanner(new FileReader(Main.class.getResource(
					"/resource/" + fileName).getPath()));

			// first use a Scanner to get each line
			while (scanner.hasNextLine()) {
				line = scanner.nextLine();
				System.out.println(line);
				content.add(line);
			}

			scanner.close();

		} catch (FileNotFoundException ex) {
			System.out.println(ex.getMessage());
		}

		return content;
	}
}
